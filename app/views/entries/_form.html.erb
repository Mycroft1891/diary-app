<%= form_for @entry do |f| %>
  <%= render "shared/errors", object: f.object %>
  <div class="form-group">
    <%= f.text_field :title, class: 'form-control', placeholder: 'My Title' %>
  </div>

  <div class="form-group">
    <%= f.text_area :content, class: 'form-control', placeholder: 'What happened to me...' %>
  </div>

  <div class="form-group">
    <%= f.submit "Create Entry", class: "btn btn-lg btn-outline-info" %>
  </div>
<% end %>
