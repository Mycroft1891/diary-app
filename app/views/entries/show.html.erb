<div class="row justify-content-md-center">
  <div class="col-xs-12 col-sm-12 col-md-8 col-lg-7">
    <h1><%= @entry.title %></h1>
    <%= link_to "Edit", edit_entry_path(@entry), class: "btn btn-outline-info" %>
    <p><%= simple_format @entry.content %></p><hr>
    <p><%= @entry.created_at.strftime("%B %d - %Y") %></p>

    <div class="row">
    <% @related_entries.each do |entry| %>
      <div class="col-xs-12 col-sm-12 col-md-4 card-item">
      <%= render 'entry', entry: entry %>
      </div><!-- end single entry -->
    <% end %>
    </div><!-- featured entries -->
  </div><!-- entry content -->
</div><!-- closing row -->
